<% end %>
<% content_for :script do %>
<script>
  setTimeout(function() {
    $('.page-1').removeClass('page-1');
    $('.page-2').removeClass('page-2');
    $('.pages').addClass('transition');
  }, 2000)
</script>
<% end %>