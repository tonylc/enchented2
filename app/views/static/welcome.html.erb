<% content_for :head do %>
<style>
	img {
	  background: #ccc;
	}

	body {
	 font: 78%/120% times new roman, arial, sans-serif;
	 margin: 10px 10px;
	 text-align: left;
	}

	h1, h2, h3 {
	  color: #222;
	  font: bold 34px "Century Schoolbook", Georgia, Times, serif;
	  font-size: 28px;
	  margin: 0 auto 6px auto;
	  letter-spacing: -1px;
	  width: 600px;
	  text-shadow: 0 -1px 1px #000;
	}

	p {
	  font-size: 13px;
	  margin: 0 0 6px 0;
	  text-shadow: 0 -1px 1px #aaa;
	}

	.doc {
	  margin: auto;
	  width: 610px;
	}

	.book {
	  outline: none;
	  height: 400px;
	  margin: 40px auto 10px auto;
	  width: 600px;
	  -webkit-transform: rotate(0);
	}

	.pages {
	  display: block;
	  height: 100%;
	  list-style: none;
	  margin: 0;
	  padding: 0;
	  position: relative;
	  width: 100%;
	  -webkit-transition: all 1s ease-in-out;
	}

	.pages.transition {
	  -webkit-transform: rotate(0) scale(1.5);
	  -webkit-opacity: 0;
	}

	.page {
	  position: absolute;
	  left: 0;
	  top: 0;
	  font-size: 12px;
	/*   text-shadow: 0 0 2px #666; */
	}

	.page-even {
	  padding: 0 0 0 50%;
	  width: 50%;
	}

	.page-odd {
	  padding: 0 50% 0 0;
	  width: 50%;
	}

	.hd,
	.bd,
	.ft {
	  background: #fff;
	  border: solid 1px #222;
	}


	.page-odd .hd,
	.page-odd .bd {
	  background-image:-webkit-gradient(linear,left top,right top,color-stop(0.5, #fff),color-stop(0.8, #eee));
	}



	.page-even .hd,
	.page-even .bd {
	  background-image:-webkit-gradient(linear,left top,right top,color-stop(0.2, #eee),color-stop(0.5, #fff));
	}


	.hd {
	  border-bottom: none;
	  height: 30px;
	}

	.bd {
	  border-top: none;
	  border-bottom: none;
	  height: 350px;
	  overflow: hidden;
	  padding: 0 30px 20px 30px;
	}

	.ft {
	  background-image:-webkit-gradient(linear,left top,right top,color-stop(0.02, #aaa),color-stop(0.50, #eee),color-stop(1.0, #aaa));
	  border-bottom: none;
	  height: 5px;
	  margin-top: -3px;
	  opacity: 0.8;
	}

	.page-even .hd,
	.page-even .ft {
	  -webkit-border-top-right-radius: 100px 3px;
	  -webkit-border-top-left-radius: 100px 3px;
	}

	.page-odd .hd,
	.page-odd .ft {
	  -webkit-border-top-right-radius: 100px 3px;
	  -webkit-border-top-left-radius: 100px 3px;
	}

	@-webkit-keyframes page-even {
	  0% {
	    -webkit-transform: rotateY(0deg);
	  }
	  50% {
	    -webkit-transform: rotateY(0deg);
	  }
	  75% {
	    color #eee;
	    -webkit-transform: rotateY(90deg);
	  }
	  100% {
	    -webkit-transform: rotateY(90deg);
	  }
	}

	@-webkit-keyframes page-odd {
	  0% {
	    -webkit-transform: rotateY(90deg);
	  }
	  50% {
	    -webkit-transform: rotateY(90deg);
	  }
	  75% {
	    color: #eee;
	    -webkit-transform: rotateY(90deg);
	  }
	  100% {
	    color: #222;
	    -webkit-transform: rotateY(0deg);
	  }
	}

	@-webkit-keyframes page-even-hd {
	  0% {

	  }
	  50% {
	    height: 30px;
	    margin-top: 0;
	    -webkit-border-top-left-radius: 100px 3px;
	  }
	  75% {
	    height: 50px;
	    margin-top: -25px;
	    -webkit-border-top-left-radius: 300px 40px;
	    -webkit-border-top-right-radius: 80px 40px;
	  }
	  100% {

	  }
	}

	@-webkit-keyframes page-odd-hd {
	  0% {

	  }
	  50% {

	  }

	  75% {
	    height: 50px;
	    margin-top: -25px;
	    -webkit-border-top-left-radius: 80px 40px;
	    -webkit-border-top-right-radius: 300px 40px;
	  }
	  100% {
	    height: 30px;
	    margin-top: 0;
	    -webkit-border-top-right-radius: 100px 3px;
	  }
	}

	@-webkit-keyframes page-even-bg {
	  0% {
	  }
	  50% {
	    color: #000;
	  }
	  75% {
	    color: #ccc;
	  }
	  100% {
	  }
	}


	/*
	.book:before{
	  content: "Click The Book";
	  display: block;
	  position: absolute;
	  width: 100%;
	  top: 48%;
	  color: rgba(150,0,0,0.9);
	  position: absolute;
	  z-index: 100000;
	  font-size: 40px;
	  left: 0%;
	  -webkit-text-stroke: 2px rgba(150,0,0,0.9);
	  text-shadow: 1px -1px 2px #000;
	  line-height: 100%;
	}

	:before {
	  display: none;
	}
	*/

	.page-1  {
	  -webkit-animation: page-even 0.7s infinite ease-out;
	}

	.page-1 .hd {
	  -webkit-animation: page-even-hd 0.7s infinite ease-in;
	}

	.page-1 .bd {
	  -webkit-animation: page-even-bg 0.7s infinite ease-in;
	}

	.page-2 {
	  -webkit-animation: page-odd 0.7s infinite ease-out;
	}

	.page-2 .hd {
	  -webkit-animation: page-odd-hd 0.7s infinite ease-out;
	}

	.page-3 {
	  overflow: hidden;
	  -webkit-border-top-left-radius: 100px 3px;
	  -webkit-border-top-right-radius: 100px 10px;
	  -webkit-box-shadow: 0 10px 20px #666;
	}
</style>
<% end %>
